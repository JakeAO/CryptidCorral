<UserControl x:Class="AppWPF.Components.DialogBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="600">
    <Grid Background="#7F323232">
        <Grid.Effect>
            <DropShadowEffect/>
        </Grid.Effect>
        <ScrollViewer x:Name="_scrollViewer" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <TextBlock x:Name="_label" FontFamily="/UAT_MS539.App.WPF;component/Assets/UI/Fonts/#Quicksand Book" FontSize="18" Foreground="White" Background="#00000000" TextDecorations="{x:Null}" Margin="5" TextWrapping="Wrap">
                <TextBlock.Effect>
                    <DropShadowEffect/>
                </TextBlock.Effect>
            [Dialog Line]
            </TextBlock>
        </ScrollViewer>
    </Grid>
</UserControl>
