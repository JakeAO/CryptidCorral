<UserControl x:Class="AppWPF.Components.RunePatternDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:components="clr-namespace:AppWPF.Components"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="180">
    <Button Click="OnClick" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="{x:Null}">
        <StackPanel Width="180" Height="30" MinWidth="180" MinHeight="30" Orientation="Horizontal" Margin="-2">
            <components:RuneDisplay x:Name="_rune0" />
            <components:RuneDisplay x:Name="_rune1" />
            <components:RuneDisplay x:Name="_rune2" />
            <components:RuneDisplay x:Name="_rune3" />
            <components:RuneDisplay x:Name="_rune4" />
            <components:RuneDisplay x:Name="_rune5" />
            <components:RuneDisplay x:Name="_rune6" />
            <components:RuneDisplay x:Name="_rune7" />
            <components:RuneDisplay x:Name="_rune8" />
        </StackPanel>
    </Button>
</UserControl>